                <ItemsControl Name="ItemsControlGitar" Grid.Column="1" Margin="40 20 20 0" Grid.Row="5" ItemsSource="{Binding Notes, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="15" Height="120" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Opacity="{Binding NoteOpacity, UpdateSourceTrigger=PropertyChanged}" Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" Style="{StaticResource DarkCheckBox}" IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Focusable="{Binding IsNoteEnabled, UpdateSourceTrigger=PropertyChanged}" >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=DeselectNote, Mode=OneWay}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </CheckBox>
                                
                                <Button Width="50" VerticalAlignment="Center" Command="{Binding Path=PlayNote}" Background="{Binding NoteBackground}" Focusable="{Binding IsNoteEnabled, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource GitarModelButton}">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                            <TextBlock Margin="2 0 0 0" FontWeight="Bold"  Text="{Binding Octave}" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

