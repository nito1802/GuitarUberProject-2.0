                    <TextBlock Text="Możliwe błędy" Foreground="#FFF759A1"  FontSize="20" FontWeight="Light" HorizontalAlignment="Center" Opacity="0.7"/>
                    <TextBlock HorizontalAlignment="Center"  Text="{Binding PossibleErrors, UpdateSourceTrigger=PropertyChanged}" Foreground="#FFE4E4E4" Opacity="0.7" FontSize="40" FontWeight="Light"/>
                </StackPanel>
                <StackPanel Margin="-40 35 0 0">
                    <TextBlock Text="Streak" Foreground="#FFE4E4E4"  FontSize="20" FontWeight="Light" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="tbCounter" Margin="0 -15 0 0" HorizontalAlignment="Center"  Text="{Binding Streak, StringFormat= {}{0:0'x'}}" Foreground="#FFE4E4E4" FontSize="80" FontWeight="Light"/>
                    <TextBlock Margin="0 15 0 0" Width="280" VerticalAlignment="Center" Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}" Foreground="{Binding MessageBrush, UpdateSourceTrigger=PropertyChanged}" FontSize="25" Opacity="0.7"/>

                </StackPanel>
                <StackPanel Margin="100 40 0 0">
                    <Grid x:Name="gridStatsAllTime">
                        <MetroChart:RadialGaugeChart
                                Name="myRadialGaugeChartAllTime"
                                Margin="-20 -60 0 0"
                                ChartTitle=""
                                ChartSubTitle=""
                                PlotterAreaStyle="{StaticResource RadialGaugeChartPlotterAreaStyleMyGreen}"
                                IsEnabled="False"
                                Background="Transparent">
                            <MetroChart:RadialGaugeChart.Series>
                                <MetroChart:ChartSeries 
                                    ItemsSource="{Binding Data}"
                                    SeriesTitle="My Population Series"
                                    DisplayMember="Name"
                                    ValueMember="Count" />
                            </MetroChart:RadialGaugeChart.Series>
                        </MetroChart:RadialGaugeChart>

                        <TextBlock Margin="80 0 0 0" HorizontalAlignment="Left" Text="{Binding AllCounter, UpdateSourceTrigger=PropertyChanged}" Width="180" Foreground="#FF2AB447" FontWeight="Bold" FontSize="35"/>
                    </Grid>

                    <Grid x:Name="gridStatsToday" Margin="0 20 0 0">
                        <TextBlock Margin="60 -30 0 0" Text="This Session" HorizontalAlignment="Left" Foreground="#FF007C9C" FontSize="20" FontWeight="UltraLight"/>
                        <MetroChart:RadialGaugeChart
                                Name="myRadialGaugeChart"
                                Margin="-20 -60 0 0"
                                ChartTitle=""
                                ChartSubTitle=""
                                PlotterAreaStyle="{StaticResource RadialGaugeChartPlotterAreaStyleMy}"
                                IsEnabled="False"
                                Background="Transparent">
                            <MetroChart:RadialGaugeChart.Series>
                                <MetroChart:ChartSeries 
                            ItemsSource="{Binding Data}"
                            SeriesTitle="My Population Series"
                            DisplayMember="Name"
                            ValueMember="Count" />
                            </MetroChart:RadialGaugeChart.Series>
                        </MetroChart:RadialGaugeChart>

                        <TextBlock Margin="80 0 0 0" HorizontalAlignment="Left" Text="{Binding AllCounter, UpdateSourceTrigger=PropertyChanged}" Width="180" Foreground="#FF007C9C" FontWeight="Bold" FontSize="35"/>
                    </Grid>
                </StackPanel>

