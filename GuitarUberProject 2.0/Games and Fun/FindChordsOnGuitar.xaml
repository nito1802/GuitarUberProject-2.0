                                  RowStyle="{StaticResource HighlightableRow}" Canvas.Left="640" Canvas.Top="295" Width="180" MaxHeight="235"
                                  CellStyle="{StaticResource CellStyle}" BorderBrush="{x:Null}"
                                  RowDetailsVisibilityMode="Collapsed"
                                  MouseLeave="DataG_MouseLeave">
