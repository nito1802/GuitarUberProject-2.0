                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="14" Grid.Column="13" Margin="-70 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        
                        <TextBlock Margin="0 -28 0 0" Text="1" HorizontalAlignment="Center" FontSize="20" Foreground="White" />
