                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="6" Grid.Column="6" Margin="-270 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="7" Grid.Column="7" Margin="-272 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="8" Grid.Column="8" Margin="-274 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="9" Grid.Column="9" Margin="-276 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="10" Grid.Column="10" Margin="-278 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="11" Grid.Column="11" Margin="-280 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
                        <Button Focusable="False" Style="{StaticResource MainGitarBarButton}" Tag="12" Grid.Column="12" Margin="-283 -48 0 0" Width="15" Height="15" Click="BarButtonGuitar_Click" MouseRightButtonDown="BarButtonGuitar_MouseRightButtonDown"/>
