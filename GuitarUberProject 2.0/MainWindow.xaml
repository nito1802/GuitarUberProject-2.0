<Window x:Class="GitarUberProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:eventTriggers="clr-namespace:GitarUberProject.EventTriggers"
        xmlns:templateSelectors="clr-namespace:GitarUberProject.TemplateSelectors"
        xmlns:views="clr-namespace:GitarUberProject.Views"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Name="titleWindow"
        AllowsTransparency="True"
        BorderThickness="1"
        BorderBrush="#7FCF1414"
        Background="#A5000000"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseLeftButtonUp="TitleWindow_PreviewMouseLeftButtonUp"
        PreviewMouseRightButtonDown="TitleWindow_PreviewMouseRightButtonDown"
        WindowStartupLocation="CenterScreen"
        MouseMove="TitleWindow_MouseMove"
        Title="Gitar Uber Project 2.0"
        Height="1080"
        Width="1920">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="XamlStyles\StylesForMainWindow.xaml" />
                <ResourceDictionary Source="XamlStyles\CheckboxStyle.xaml" />
                <ResourceDictionary Source="XamlStyles\ComboBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="KlocekChordTemplate">
                <Border Name="borderInput"
                        Margin="0,0,5,5"
                        Background="{Binding BackgroundBrush}"
                        Opacity="{Binding KlocekOpacity, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Center"
                        Width="25"
                        Height="19">
                    <TextBlock Text="{Binding ContentText}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="10" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="PlayListNoteTemplate">
                <Border Name="borderInput"
                        Visibility="{Binding KlocekVisibility, UpdateSourceTrigger=PropertyChanged}"
                        Width="25"
                        Height="19"
                        Canvas.Top="{Binding Path=YPos}"
                        VerticalAlignment="Center"
                        Background="{Binding NoteBackground}"
                        Opacity="{Binding KlocekOpacity, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseRightButtonDown">
                            <i:InvokeCommandAction Command="{Binding Path=RemoveFromPlaylist}" />
                        </i:EventTrigger>
                        <eventTriggers:MouseWheelButtonEventTrigger>
                            <i:InvokeCommandAction Command="{Binding Path=PlayNote}" />
                        </eventTriggers:MouseWheelButtonEventTrigger>
                        <!--<i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                       -->
                    </i:Interaction.Triggers>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock FontWeight="Bold"
                                   Text="{Binding Name}"
                                   FontSize="10"
                                   Foreground="#FFF1F1F1"
                                   VerticalAlignment="Center" />
                        <TextBlock Margin="2 0 0 0"
                                   FontWeight="Bold"
                                   Text="{Binding Octave}"
                                   FontSize="10"
                                   Foreground="#FFF1F1F1"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="PlayListChordTemplate">
                <Canvas Opacity="{Binding KlocekOpacity, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding KlocekVisibility, UpdateSourceTrigger=PropertyChanged}">

                    <Border VerticalAlignment="Top"
                            Panel.ZIndex="5"
                            Background="#AF1F1F1F">
                        <TextBlock Text="{Binding ChordName, UpdateSourceTrigger=PropertyChanged}"
                                   Foreground="#FFF1F1F1"
                                   FontWeight="Bold"
                                   FontSize="11" />
                    </Border>

                    <ItemsControl Name="icChordKlocki"
                                  Background="Gold"
                                  ItemsSource="{Binding NotesInChord, UpdateSourceTrigger=PropertyChanged}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <!--Width="{Binding NoteWidth}"-->
                            <DataTemplate>
                                <Border Width="25"
                                        Height="19"
                                        VerticalAlignment="Center"
                                        Canvas.Top="{Binding Path=YPos}"
                                        Background="{Binding NoteBackground}"
                                        Opacity="{Binding KlocekOpacity, UpdateSourceTrigger=PropertyChanged}">

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <TextBlock FontWeight="Bold"
                                                   Text="{Binding Name}"
                                                   FontSize="10"
                                                   Foreground="#FFF1F1F1"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Margin="2 0 0 0"
                                                   FontWeight="Bold"
                                                   Text="{Binding Octave}"
                                                   FontSize="10"
                                                   Foreground="#FFF1F1F1"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left"
                                        Value="{Binding Path=XPos}" />
                                <Setter Property="Canvas.Top"
                                        Value="{Binding Path=YPos}" />
                                <Setter Property="Panel.ZIndex"
                                        Value="{Binding Path=ZIndex}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>

                    <Border x:Name="chordBorder"
                            Opacity="0.5"
                            Background="{Binding ChordBackground, UpdateSourceTrigger=PropertyChanged}"
                            Canvas.Left="0"
                            BorderBrush="{Binding ChordBorder, UpdateSourceTrigger=PropertyChanged}"
                            BorderThickness="1"
                            Width="{Binding ChordWidth, UpdateSourceTrigger=PropertyChanged}"
                            Height="{Binding ChordHeight, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseRightButtonDown">
                                <i:InvokeCommandAction Command="{Binding Path=RemoveFromPlaylist}" />
                            </i:EventTrigger>
                            <eventTriggers:MouseWheelButtonEventTrigger>
                                <i:InvokeCommandAction Command="{Binding Path=PlayNote}" />
                            </eventTriggers:MouseWheelButtonEventTrigger>
                            <!--<i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                       -->
                        </i:Interaction.Triggers>
                    </Border>
                </Canvas>

                <!--<Border Name="borderInput" Width="55" Height="19" VerticalAlignment="Center" Background="{Binding NoteBackground}" Opacity="{Binding KlocekOpacity, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseRightButtonDown">
                            <i:InvokeCommandAction Command="{Binding Path=RemoveFromPlaylist}" />
                        </i:EventTrigger>
                        <local:MouseWheelButtonEventTrigger>
                            <i:InvokeCommandAction Command="{Binding Path=PlayNote}" />
                        </local:MouseWheelButtonEventTrigger>
                        -->
                <!--<i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                       -->
                <!--
                    </i:Interaction.Triggers>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontWeight="Bold" Text="{Binding Name}" FontSize="10" Foreground="#FFF1F1F1" VerticalAlignment="Center" />
                        <TextBlock Margin="2 0 0 0" FontWeight="Bold"  Text="{Binding Octave}" FontSize="10" Foreground="#FFF1F1F1" VerticalAlignment="Center" />
                    </StackPanel>
                </Border>-->
            </DataTemplate>

            <templateSelectors:PlaylistItemDataTemplateSelector x:Key="playlistItemDataTemplateSelector" />

            <DropShadowEffect x:Key="RedglowEffect"
                              BlurRadius="10"
                              Opacity="1"
                              ShadowDepth="-44"
                              Color="#FFF02020"></DropShadowEffect>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="MGrid">
        <Grid x:Name="gridBlack"
              Background="#99000000"
              Panel.ZIndex="2"
              Visibility="Hidden" />

        <Grid Name="MainGrid"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <!--Title-->
                <RowDefinition Height="367" />
                <!--Akordy-->
                <RowDefinition Height="150" />
                <!--Skale & Progresje-->
                <RowDefinition Height="auto" />
                <!--Menu-->
                <RowDefinition Height="130" />
                <!--Timeline utworu-->
                <RowDefinition />
                <!--Gitara-->
                <RowDefinition Height="80" />
                <!--Pianino-->
            </Grid.RowDefinitions>

            <StackPanel Margin="0 0 150 0"
                        HorizontalAlignment="Right">
                <TextBlock Text="Gitar Uber Project"
                           FontWeight="Bold"
                           FontSize="25"
                           Foreground="#FFD8D8D8" />
                <TextBlock Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"
                           FontWeight="UltraLight"
                           FontSize="20"
                           Foreground="#FFD8D8D8" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 -10 -10 0">
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnMinimize"
                            Content="-"
                            FontSize="35"
                            FontWeight="Bold"
                            Width="60"
                            Height="50"
                            VerticalContentAlignment="Center"
                            Click="btnMinimize_Click" />
                    <Button Name="btnQuit"
                            Content="X"
                            Width="60"
                            FontSize="25"
                            FontWeight="Bold"
                            Height="50"
                            Click="btnQuit_Click" />
                </StackPanel>
                <TextBlock Margin="0 5 0 0"
                           Text="ver. 2.1.0"
                           Foreground="#FFF1F1F1"
                           FontSize="11"
                           FontWeight="Bold" />
                <TextBlock Margin="0 0 0 0"
                           Text="Jarosław Szczupak 2020-2023"
                           Foreground="#FFF1F1F1"
                           FontSize="9"
                           FontWeight="Light" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Custom"
                           Margin="-15 0 0 0"
                           FontSize="15"
                           Height="20"
                           Foreground="#FFE8E8E8"
                           FontWeight="Bold"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-90" />
                            <TranslateTransform />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <ItemsControl Name="CustomControlsItemsControl"
                              Margin="-15 0 0 0"
                              Height="110"
                              Width="1440"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding Chords, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource OtherStyleButton}"
                                    Command="{Binding IsSelectCommand}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseRightButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Path=IsSelectCommand}" />
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                    </i:EventTrigger>
                                    <eventTriggers:MouseWheelButtonEventTrigger>
                                        <i:InvokeCommandAction Command="{Binding Path=PlayDownOtherCommand}" />
                                    </eventTriggers:MouseWheelButtonEventTrigger>
                                </i:Interaction.Triggers>
                                <views:NewChordViewOther Margin="-10 -22 -30 0"
                                                         DataContext="{Binding }"
                                                         Opacity="{Binding ChordOpacity, UpdateSourceTrigger=PropertyChanged}" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.Template>
                        <ControlTemplate TargetType="ItemsControl">
                            <ScrollViewer HorizontalScrollBarVisibility="Visible"
                                          VerticalScrollBarVisibility="Disabled"
                                          PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                          Height="100">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                </ItemsControl>
            </StackPanel>

            <CheckBox x:Name="cbReadChordMode"
                      Width="130"
                      HorizontalAlignment="Left"
                      Grid.RowSpan="2"
                      Panel.ZIndex="70"
                      IsChecked="True"
                      Checked="CbReadChordMode_Checked"
                      Unchecked="CbReadChordMode_Unchecked"
                      VerticalAlignment="Top"
                      Margin="0 100 10 0"
                      Style="{StaticResource DarkCheckBox}"
                      Content="Read Chord Mode"
                      VerticalContentAlignment="Center"
                      FontSize="12"
                      Foreground="#FFD8D8D8" />

            <DataGrid Name="ChordsDg"
                      Margin="-10 0 -10 0"
                      Grid.Row="1"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      GridLinesVisibility="None"
                      SelectionUnit="Cell"
                      HorizontalScrollBarVisibility="Hidden"
                      ItemsSource="{Binding Chords, UpdateSourceTrigger=PropertyChanged}"
                      HeadersVisibility="All"
                      CellStyle="{StaticResource DataGridCell_NewStyle}"
                      CanUserAddRows="false"
                      CanUserResizeColumns="False"
                      CanUserReorderColumns="False"
                      PreviewKeyDown="ChordsDg_PreviewKeyDown"
                      AutoGenerateColumns="False"
                      Background="{x:Null}"
                      RowBackground="{x:Null}"
                      BorderBrush="{x:Null}">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type Button}"
                           x:Key="{ComponentResourceKey ResourceId=DataGridSelectAllButtonStyle, TypeInTargetAssembly={x:Type DataGrid}}">
                        <Setter Property="Opacity"
                                Value="0" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Width"
                                Value="auto" />
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="Foreground"
                                Value="#FFE8E8E8" />
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />

                        <Setter Property="FontWeight"
                                Value="Light" />
                        <Setter Property="FontSize"
                                Value="15" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowHeaderStyle>
                    <Style TargetType="DataGridRowHeader">
                        <Setter Property="Width"
                                Value="auto" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border ToolTip="{Binding Type, UpdateSourceTrigger=PropertyChanged}">
                                        <StackPanel VerticalAlignment="Center"
                                                    Margin="15 0 15 0">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="13"
                                                           Foreground="#FFE8E8E8"
                                                           FontWeight="UltraLight"
                                                           Text="{Binding ChordIndex, UpdateSourceTrigger=PropertyChanged}"
                                                           Width="20"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="13"
                                                           Foreground="#FFE8E8E8"
                                                           FontWeight="Bold"
                                                           Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                                           Width="60"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>

                                            <TextBlock  Text="{Binding IntervalsText, UpdateSourceTrigger=PropertyChanged}"
                                                        HorizontalAlignment="Left"
                                                        FontSize="{Binding FontSizeIntervalText}"
                                                        FontWeight="UltraLight"
                                                        Foreground="#FFE8E8E8" />
                                        </StackPanel>

                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Dodaj"
                                                          Name="menuItemAddRow"
                                                          Command="{Binding AddRow}" />
                                                <MenuItem Header="Zmień kolejność"
                                                          Name="zmienKolejnosc"
                                                          Command="{Binding ChangeOrder}" />
                                                <MenuItem Header="Edytuj nazwę"
                                                          Name="menuItemEdytuj"
                                                          Command="{Binding EditRowHeaderName}" />
                                                <Separator />
                                                <MenuItem Header="Resetuj Interwały"
                                                          Name="resetujInterwaly"
                                                          Command="{Binding ResetIntervals}" />
                                                <MenuItem Header="Usuń"
                                                          Name="menuItemRemoveRow"
                                                          Command="{Binding RemoveRow}" />
                                            </ContextMenu>
                                        </Border.ContextMenu>

                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background"
                                                        Value="Transparent" />

                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="true">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush EndPoint="0.5,1"
                                                                                     StartPoint="0.5,0">
                                                                    <GradientStop Color="#FF1E472F"
                                                                                  Offset="0" />
                                                                    <GradientStop Color="#FF043016"
                                                                                  Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.RowHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn IsReadOnly="True"
                                            Width="*"
                                            Header="C">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Margin="0 5 0 0"
                                        Opacity="{Binding ChordOpacity, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ChordStyleButton}"
                                        DataContext="{Binding ChordC}"
                                        Command="{Binding IsSelectChordCommand}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=IsSelectChordCommand}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                        <eventTriggers:MouseWheelButtonEventTrigger>
                                            <i:InvokeCommandAction Command="{Binding Path=PlayDownCommand}" />
                                        </eventTriggers:MouseWheelButtonEventTrigger>
                                    </i:Interaction.Triggers>

                                    <Border Width="140"
                                            Margin="2"
                                            DataContext="{Binding }"
                                            Background="{Binding ChordReadModeBackground}"
                                            Height="103"
                                            CornerRadius="5"
                                            BorderBrush="#FFE6E6E6"
                                            BorderThickness="0"
                                            Opacity="1">

                                        <StackPanel Margin="2">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Left"
                                                           Text="{Binding ChordFullName}"
                                                           FontWeight="UltraLight"
                                                           Foreground="#FFE6E6E6"
                                                           Margin="2 0 0 0"
                                                           FontSize="31" />
                                            </DockPanel>

                                            <Border CornerRadius="5"
                                                    Background="#B2000000"
                                                    Margin="2 5 2 2">
                                                <ItemsControl Name="itemsControlNoteOctaves"
                                                              ItemsSource="{Binding NoteOctavesDataGrid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel  DockPanel.Dock="Left"
                                                                        Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal"
                                                                        Margin="0 0 0 0">
                                                                <TextBlock Margin="4 0 0 0"
                                                                           Text="{Binding Name}"
                                                                           Foreground="{Binding NoteColor}"
                                                                           FontSize="19"
                                                                           FontWeight="Bold" />
                                                                <TextBlock Foreground="#FF8D8D8D"
                                                                           Text="{Binding Octave}"
                                                                           FontSize="19"
                                                                           FontWeight="Bold"
                                                                           ClipToBounds="False"
                                                                           Panel.ZIndex="24" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Graj"
                                                      Name="menuItemRemoveCheckpoint"
                                                      Command="{Binding GrajCommand}" />
                                            <MenuItem Header="Edytuj"
                                                      Name="menuItemEditChord"
                                                      Command="{Binding EditChord}" />
                                            <MenuItem Header="Koloruj"
                                                      Name="menuItemKoloruj"
                                                      Command="{Binding KolorujChord}"
                                                      CommandParameter="{Binding Name}" />
                                            <Separator />
                                            <MenuItem Header="Do Playlisty"
                                                      Command="{Binding MoveToChordBox}"
                                                      Name="DoPlaylisty" />
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn IsReadOnly="True"
                                            Width="*"
                                            Header="C#">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Margin="0 5 0 0"
                                        Opacity="{Binding ChordOpacity, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ChordStyleButton}"
                                        DataContext="{Binding ChordCSharp}"
                                        Command="{Binding IsSelectChordCommand}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=IsSelectChordCommand}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                        <eventTriggers:MouseWheelButtonEventTrigger>
                                            <i:InvokeCommandAction Command="{Binding Path=PlayDownCommand}" />
                                        </eventTriggers:MouseWheelButtonEventTrigger>
                                    </i:Interaction.Triggers>

                                    <Border Width="140"
                                            Margin="2 0"
                                            DataContext="{Binding }"
                                            Background="{Binding ChordReadModeBackground}"
                                            Height="103"
                                            CornerRadius="5"
                                            BorderBrush="#FFE6E6E6"
                                            BorderThickness="0"
                                            Opacity="1">

                                        <StackPanel Margin="2">
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Left"
                                                           Text="{Binding ChordFullName}"
                                                           FontWeight="UltraLight"
                                                           Foreground="#FFE6E6E6"
                                                           Margin="2 0 0 0"
                                                           FontSize="31" />
                                            </DockPanel>

                                            <Border CornerRadius="5"
                                                    Background="#B2000000"
                                                    Margin="2 5 2 2">
                                                <ItemsControl Name="itemsControlNoteOctaves"
                                                              ItemsSource="{Binding NoteOctavesDataGrid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel  DockPanel.Dock="Left"
                                                                        Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal"
                                                                        Margin="0 0 0 0">
                                                                <TextBlock Margin="4 0 0 0"
                                                                           Text="{Binding Name}"
                                                                           Foreground="{Binding NoteColor}"
                                                                           FontSize="19"
                                                                           FontWeight="Bold" />
                                                                <TextBlock Foreground="#FF8D8D8D"
                                                                           Text="{Binding Octave}"
                                                                           FontSize="19"
                                                                           FontWeight="Bold"
                                                                           ClipToBounds="False"
                                                                           Panel.ZIndex="24" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Graj"
                                                      Name="menuItemRemoveCheckpoint"
                                                      Command="{Binding GrajCommand}" />
                                            <MenuItem Header="Edytuj"
                                                      Name="menuItemEditChord"
                                                      Command="{Binding EditChord}" />
                                            <MenuItem Header="Koloruj"
                                                      Name="menuItemKoloruj"
                                                      Command="{Binding KolorujChord}"
                                                      CommandParameter="{Binding Name}" />
                                            <Separator />
                                            <MenuItem Header="Do Playlisty"
                                                      Command="{Binding MoveToChordBox}"
                                                      Name="DoPlaylisty" />
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn IsReadOnly="True"
                                            Width="*"
                                            Header="D">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Margin="0 5 0 0"
                                        Opacity="{Binding ChordOpacity, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ChordStyleButton}"
                                        DataContext="{Binding ChordD}"
                                        Command="{Binding IsSelectChordCommand}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=IsSelectChordCommand}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding Path=MoveToChordBox}" />
                                        </i:EventTrigger>
                                        <eventTriggers:MouseWheelButtonEventTrigger>
                                            <i:InvokeCommandAction Command="{Binding Path=PlayDownCommand}" />
                                        </eventTriggers:MouseWheelButtonEventTrigger>
                                    </i:Interaction.Triggers>

                                    <Border Width="140"
                                            Margin="2 0"
                                            DataContext="{Binding }"
                                            Background="{Binding ChordReadModeBackground}"
                                            Height="103"
                                            CornerRadius="5"
                                            BorderBrush="#FFE6E6E6"
